<?xml version="1.0"?>
<robot name="block3D">
  	<material name="grey">
        <color rgba="0.91 0.925 0.945 1"/>
    </material>
	<material name="magenta">
        <color rgba="1 0.1 0.01 1"/>
    </material>

    <link name="plane">
        <origin rpy="0 0 0" xyz="0 0 0.005"/>
        <visual>
          <geometry>
              <box size="0 0 0.0"/>
          </geometry>
          <material name="grey"/>
        </visual>
        <collision>
           <geometry>
              <box size="0 0 0.0"/>
          </geometry>
        </collision>
        <inertial>
          <mass value="0"/>
          <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>

    <joint name="slide_x" type="prismatic">
        <origin xyz="0.0 0.0 0.0"/>
        <parent link="plane"/>
        <child link="hinge_xy"/>
        <dynamics damping="0.05" friction="0.001"/>
        <axis xyz="1.0 0.0 0.0"/>
        <limit effort="1000.0" lower="-15.0" upper="15.0" velocity="5.0"/>
    </joint>

    <link name="hinge_xy">
      <origin xyz="0.0 0.0 0.0"/>
      <visual>
          <geometry>
              <box size="0.0 0.0 0.0"/>
          </geometry>
          <material name="cayan"/>
      </visual>
      <collision>
          <geometry>
              <box size="0.0 0.0 0.0"/>
          </geometry>
      </collision>
      <inertial>
          <mass value="0.0"/>
          <inertia ixx="0.0" ixy="0" ixz="0" iyy="0.0" iyz="0" izz="0.0"/>
      </inertial>
    </link>

    <joint name="slide_y" type="prismatic">
      <origin xyz="0.0 0.0 0.0"/>
      <parent link="hinge_xy"/>
      <child link="hinge_yz"/>
      <dynamics damping="0.05" friction="0.001"/>
      <axis xyz="0.0 1.0 0.0"/>
      <limit effort="1000.0" lower="-15.0" upper="15.0" velocity="5.0"/>
    </joint>

  <link name="hinge_yz">
      <origin xyz="0.0 0.0 0.0"/>
      <visual>
          <geometry>
              <box size="0.0 0.0 0.0"/>
          </geometry>
          <material name="cayan"/>
      </visual>
      <collision>
          <geometry>
              <box size="0.0 0.0 0.0"/>
          </geometry>
      </collision>
      <inertial>
          <mass value="0.0"/>
          <inertia ixx="0.0" ixy="0" ixz="0" iyy="0.0" iyz="0" izz="0.0"/>
      </inertial>
  </link>

  <joint name="slide_z" type="prismatic">
      <origin xyz="0.0 0.0 0.0"/>
      <parent link="hinge_yz"/>
      <child link="block"/>
      <dynamics damping="1.0" friction="0.001"/>
      <axis xyz="0.0 0.0 1.0"/>
      <limit effort="1000.0" lower="-15.0" upper="15.0" velocity="5.0"/>
  </joint>

  <link name="block">
      <origin xyz="0.0 0.0 0.0"/>
      <visual>
          <geometry>
              <box size="0.3 0.3 0.3"/>
          </geometry>
          <material name="magenta"/>
      </visual>
      <collision>
          <geometry>
              <box size="0.3 0.3 0.3"/>
          </geometry>
      </collision>
      <inertial>
          <mass value="0.5"/>
          <inertia ixx="0.0033" ixy="0" ixz="0" iyy="0.00333" iyz="0" izz="0.0033"/>
      </inertial>
  </link>
</robot>
